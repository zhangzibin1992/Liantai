<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //第三方的库design设置标题的样式(数据统计页面)
    <style name="AppTheme_design_data">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">120px</item>
        <item name="android:layout_marginLeft">10px</item>
        <item name="android:layout_marginRight">10px</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">32px</item>
        <item name="textAllCaps">false</item>
    </style>
    //第三方的库design设置标题的样式(设备详情页面)
    <style name="AppTheme_design_device">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">120px</item>
        <item name="android:layout_marginLeft">100px</item>
        <item name="android:layout_marginRight">100px</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">40px</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="textsize">
        <item name="android:textSize">36px</item>
    </style>


    //订单栏蓝色字体格式
    <style name="tv_order_blue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">28px</item>
        <item name="android:layout_marginTop">10px</item>
        <item name="android:layout_marginLeft">10px</item>
    </style>


    //订单栏黑色字体格式
    <style name="tv_order_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28px</item>
        <item name="android:layout_marginTop">10px</item>
    </style>

    //msg_layout白色字体格式
    <style name="msg_layout_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30px</item>
        <item name="android:layout_marginTop">20px</item>
    </style>

    //msg_layout蓝色字体格式
    <style name="msg_layout_style_blue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">30px</item>
        <item name="android:layout_marginTop">20px</item>
        <item name="android:layout_marginLeft">20px</item>
    </style>



    //时间选择格式按钮
    <style name="tv_time_selection">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">70px</item>
        <item name="android:layout_weight">25</item>
        <item name="android:textSize">30px</item>
        <item name="android:drawableRight">@drawable/ic_down</item>
        <item name="android:background">@drawable/shape_time</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">16px</item>
        <item name="android:layout_marginLeft">4px</item>
    </style>

    <style name="tv_Theme_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">10px</item>
        <item name="android:paddingBottom">10px</item>
        <item name="android:paddingLeft">20px</item>
        <item name="android:background">@color/darkgray</item>
    </style>
    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">160px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>

    </style>

    
</resources>
