<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liantai.ui">

    <application
        android:name="com.liantai.application.UseDeviceSizeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        //设计稿尺寸
        <meta-data android:name="design_width" android:value="760">
        </meta-data>
        <meta-data android:name="design_height" android:value="1280">
        </meta-data>
        <activity android:name=".MainActivity">

        </activity>
        <activity android:name=".LogoActivity" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DeviceActivity"></activity>
    </application>

</manifest>